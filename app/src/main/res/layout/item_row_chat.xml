<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tv_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_chat_left"
        android:backgroundTint="@color/blue_500"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_right"
        app:layout_constraintVertical_bias="0.034"
        tools:ignore="RtlCompat"
        tools:text="Salut les amis j'espere que vous aller bien, mois ca je cerhcuer comprendre" />

    <TextView
        android:id="@+id/tv_chat_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_chat_right"
        android:backgroundTint="@color/blue_500"
        android:fontFamily="@font/roboto"
        android:maxWidth="300dp"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        tools:ignore="RtlCompat"
        tools:text="Salut les amis j'espere que vous aller bien, mois ca je cerhcuer comprendre" />


</androidx.constraintlayout.widget.ConstraintLayout>